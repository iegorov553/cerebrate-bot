[bandit]
# Configuration file for bandit security linter

# Skip test directories and virtual environments
exclude_dirs = tests,test_env,venv,.git,__pycache__

# Skip specific tests acceptable only in development/testing context
skips = B101

# B101: assert_used - Acceptable in tests but should not be in production code
# B110: try_except_pass - Enabled - should be replaced with proper logging
# Production code scanned without B101 via explicit paths in CI