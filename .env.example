# Doyobi Diary Environment Configuration
# Скопируйте этот файл в .env и заполните своими значениями

# === ОСНОВНЫЕ НАСТРОЙКИ ===

# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Supabase Configuration
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# === ДОПОЛНИТЕЛЬНЫЕ СЕРВИСЫ ===

# OpenAI API для голосовых сообщений (опционально)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Настройки голосовых сообщений
WHISPER_MODEL=whisper-1
MAX_VOICE_FILE_SIZE_MB=25
MAX_VOICE_DURATION_SECONDS=120

# === АДМИНИСТРИРОВАНИЕ ===

# Telegram ID администратора (ваш Telegram ID)
ADMIN_USER_ID=123456789

# === GITHUB INTEGRATION ===

# GitHub Personal Access Token для фидбека (опционально)
GITHUB_FEEDBACK_TOKEN=ghp_your_github_token_here
GITHUB_REPO=iegorov553/cerebrate-bot

# === МОНИТОРИНГ И ЛОГИРОВАНИЕ ===

# Sentry DSN для мониторинга ошибок (опционально)
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id

# Уровень логирования
LOG_LEVEL=INFO

# === ВЕРСИОНИРОВАНИЕ ===

# Версия бота
BOT_VERSION=2.1.14

# Окружение (development/production)
ENVIRONMENT=development

# Git commit hash (автоматически на Railway)
# RAILWAY_GIT_COMMIT_SHA=

# === WEB APPLICATION ===

# URL веб-приложения
WEBAPP_URL=https://doyobi-diary.vercel.app

# Supabase ключи для веб-приложения
NEXT_PUBLIC_SUPABASE_URL=https://your_project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# === DOCKER НАСТРОЙКИ ===

# Target для docker build (development/production)
DOCKER_TARGET=development

# === МОНИТОРИНГ (ОПЦИОНАЛЬНО) ===

# Grafana admin password
GRAFANA_PASSWORD=admin

# === КЭШИРОВАНИЕ (ОПЦИОНАЛЬНО) ===

# Redis URL (если используется внешний Redis)
# REDIS_URL=redis://localhost:6379

# TTL для кэша в секундах
CACHE_TTL_SECONDS=3600

# === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ===

# Таймаут для HTTP запросов
HTTP_TIMEOUT_SECONDS=30

# Максимальное количество попыток для запросов
MAX_RETRIES=3

# Интервал между попытками (секунды)
RETRY_DELAY_SECONDS=1